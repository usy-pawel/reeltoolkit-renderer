{
  "title": "Reeltoolkit Renderer",
  "description": "GPU-ready MP4 rendering microservice turning slide bundles + audio into final reels.",
  "type": "serverless",
  "category": "video",
  "iconUrl": "https://raw.githubusercontent.com/usy-pawel/reeltoolkit-renderer/main/icon.png",
  "config": {
    "runsOn": "GPU",
    "containerDiskInGb": 20,
    "ports": [{ "containerPort": 8080, "hostPort": 8080, "protocol": "HTTP" }],
    "presets": [
      {
        "name": "default",
        "defaults": {
          "RENDER_MAX_WORKERS": "16"
        }
      }
    ],
    "env": [
      {
        "key": "RENDER_AUTH_TOKEN",
        "input": {
          "name": "Auth Token",
            "type": "string",
            "required": false,
            "description": "Optional bearer token required by the /render/reel endpoint"
        }
      },
      {
        "key": "RENDER_MAX_WORKERS",
        "input": {
          "name": "Max Workers",
          "type": "number",
          "default": 16,
          "description": "Max parallel ffmpeg workers when parallel mode is used"
        }
      }
    ]
  }
}
